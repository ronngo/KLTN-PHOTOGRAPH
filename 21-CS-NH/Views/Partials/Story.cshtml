@inherits UmbracoViewPage
@{
    Story story = Model.Root().DescendantsOrSelf<Story>().FirstOrDefault();
}

@if (story != null)
{
    string title = !string.IsNullOrWhiteSpace(story.Title) ? story.Title : story.Name;
    string imageUrl = story.MainImage != null ? story.MainImage.LocalCrops.Src : "/Media/story.png?format=webp";
    <section id="story">
        <div class="background lazy-bg" style="background-image: url(@imageUrl);"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-12 ">
                    <div class="text-center">
                        <h2>
                            @title
                        </h2>
                    </div>
                    <div class="description">
                        @Html.Raw(story.MainContent)
                    </div>
                </div>
            </div>
        </div>
    </section>
}
